    <style name="Heading2">
        <item name="android:textColor">#8f243b</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Heading2Green">
        <item name="android:textColor">#598E31</item>
        <item name="android:textStyle">bold</item>
